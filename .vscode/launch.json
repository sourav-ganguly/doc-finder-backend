{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Run with Docker DB",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/doc_finder_db",
                "ENVIRONMENT": "development"
            },
            "preLaunchTask": "Start Docker DB",
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 1
            }
        },
        {
            "name": "FastAPI: Run without Docker",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 2
            }
        },
        {
            "name": "FastAPI: Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "subProcess": true,
            "python": "${command:python.interpreterPath}",
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1",
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "10",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "presentation": {
                "hidden": false,
                "group": "FastAPI",
                "order": 3
            }
        }
    ]
}